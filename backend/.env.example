# DeepFake Detector - Environment Configuration
# Copy this file to .env and customize as needed
# Built with </> by Umesh

# =============================================================================
# SERVER SETTINGS
# =============================================================================

# Port to run the server on (default: 5002)
DEEPFAKE_PORT=5002

# Host to bind to (default: 0.0.0.0 for all interfaces)
DEEPFAKE_HOST=0.0.0.0

# Enable debug mode (never use in production!)
DEEPFAKE_DEBUG=false

# =============================================================================
# RATE LIMITING
# =============================================================================

# Maximum requests per minute per IP
RATE_LIMIT_PER_MINUTE=30

# Maximum burst requests (in 5 seconds)
RATE_LIMIT_BURST=5

# =============================================================================
# INPUT VALIDATION
# =============================================================================

# Maximum image upload size in megabytes
MAX_IMAGE_SIZE_MB=10

# =============================================================================
# API KEY (Optional)
# =============================================================================

# Set an API key to require authentication
# Leave empty/commented out for open access
# DEEPFAKE_API_KEY=your-secret-api-key-here

# =============================================================================
# MODEL SETTINGS
# =============================================================================

# Use GPU if available (set to false for CPU-only)
USE_GPU=true
